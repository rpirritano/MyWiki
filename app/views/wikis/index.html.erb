<h1>All Wikis</h1>
<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
 <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <p><%= link_to wiki.title, wiki %></p>
        </h4>
      </div>
    </div>
 <% end %>

 <table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Private</th>
            <th>User</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @wikis.each do |wiki| %>
        <tr>
            <td><%= wiki.title %></td>
            <td><%= wiki.body %></td>
            <td><%= wiki.private %></td>
            <td><%= wiki.user.email %></td>
            <td><%= link_to 'Show', wiki %></td>
            <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
            <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>